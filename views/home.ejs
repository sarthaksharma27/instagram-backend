<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        img {
            height: 300px; 
            width: 300px; 
            border-radius: 10%; 
            object-fit: cover; 
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2); 
        }
        
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7; 
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column; 
            justify-content: center; 
            align-items: center; 
            min-height: 100vh;
        }
        
        h1 {
            font-size: 24px;
            margin: 10px 0;
        }

        .button-container {
            display: flex; 
        }
        
        button {
            padding: 8px 16px;
            margin: 5px;
            border: none;
            border-radius: 5px;
            font-size: 14px;
            background-color: #3897f0; 
            color: white;
            cursor: pointer;
        }
        
        p {
            font-size: 14px;
            margin: 5px 0;
            color: #888;
        }
        
        p.likes-comments {
            font-weight: bold;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>This page belongs to @ <%= data.name %></h1>
    <div class="button-container">
        <button>Follow</button>
        <button>Message</button>
    </div>
    
    <p>
        Followers: <%= data.followers %>&nbsp;&nbsp;&nbsp;&nbsp; Following: <%= data.following %>
    </p>

    <% for (let post of data.posts) { %>
        <img src="<%= post.images %>" alt="Post image">
        <p class="likes-comments">
            Likes: <%= post.likes %>&nbsp;&nbsp;&nbsp;&nbsp; Comments: <%= post.comment %>
        </p>
    <% } %>
</body>
</html>
